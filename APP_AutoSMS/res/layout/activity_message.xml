<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#f7d44f" >

    <EditText android:id="@+id/et_cnt"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:hint="请输入自动回复的短信"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:gravity="top" 
        android:background="#ffd8c4"
        android:textColor="#2f2b24"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" 
        
        
       >

        <Button
            android:id="@+id/btn_save"

            android:layout_marginLeft="5dip"
            android:layout_width="70dp"
	        android:layout_height="40dp"
	        android:layout_gravity="center"
	        android:background="#3f50c6"
	        android:textSize="20sp"
	        android:textColor="#fcfbf1"
            android:text="保存" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_marginLeft="5dip"
            android:layout_width="70dp"
	        android:layout_height="40dp"
	        android:layout_gravity="center"
	        android:background="#dd26ef"
	        android:textColor="#fcfbf1"
	        android:textSize="20sp"
            android:text="清空" />
        
        <Button
            android:id="@+id/btn_back"
            android:layout_marginLeft="5dip"
            android:layout_width="70dp"
	        android:layout_height="40dp"
	        android:layout_gravity="center"
	        android:background="#006b24"
	        android:textColor="#fcfbf1"
	        android:textSize="20sp"
            android:text="返回" />

    </LinearLayout>
    
</LinearLayout>