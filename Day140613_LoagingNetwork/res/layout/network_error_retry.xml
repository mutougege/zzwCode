<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/retry_layout" android:orientation="vertical" 
    android:layout_width="fill_parent" android:layout_height="fill_parent" 
    android:background="@drawable/ty_bg" 
    android:visibility="gone">
    <Button android:id="@+id/retry_button" android:layout_gravity="center_horizontal" 
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="132dp" android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"  android:paddingBottom="8.0dip"
        android:shadowColor="@android:color/white" android:shadowRadius="1.0"
        android:background="@drawable/no_connection"/>

    <TextView
        android:id="@+id/offline_hint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/offline_hint"
        android:textSize="18dp"
        android:textColor="#747373"/>

</LinearLayout>
