<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="asset_main_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#888888</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="asset_secondary_style" parent="asset_main_style">
        <item name="android:textColor">#458156</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="asset_thumbnail_style">
        <item name="android:layout_width">58dip</item>
        <item name="android:layout_height">58dip</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>